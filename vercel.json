{  
  "functions": {  
    "api/*.php": {  
      "runtime": "vercel-php@0.6.0"  
    }  
  },  
  "routes": [  
    { "src": "/(.*\\.php)", "dest": "/api/$1" },  
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|webp|svg|ico))", "dest": "/public/$1" },  
    { "src": "/(.*)", "dest": "/api/index.php" }  
  ]  
}